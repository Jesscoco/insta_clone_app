<% content_for :head do %>
  <title>List |Facebook- Clone</title>
<% end %>
<h1>Liste des posts</h1>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Published by</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.comment %></td>
        <td><%= post.user.name %></td> 
        <td><%= link_to "Show" , post_path(post.id) %></td>
        <%  if current_user==post.user %>
        <td><%= link_to "Edit" , edit_post_path(post.id) %></td>
        <td><%= link_to "Destroy" , post ,method: "delete", data: {confirm: "Etes vous sur de vouloir supprimer?"} %> </td>
        <% end %>
      </tr>     
    <% end %>
  </tbody>
</table>
  <%= link_to 'Ajouter un nouveau post', new_post_path %>
